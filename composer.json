{
  "name": "prooph/event-store-http-client",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Sascha-Oliver Prolic",
      "email": "saschaprolic@googlemail.com"
    }
  ],
  "description": "Event Store HTTP Client",
  "keywords": [
    "EventStore",
    "EventSourcing",
    "DDD",
    "prooph"
  ],
  "prefer-stable": true,
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "php-http/discovery": "^1.1.1",
    "php-http/httplug": "^2.0",
    "php-http/message": "^1.7.1",
    "php-http/message-factory": "^1.0.2",
    "prooph/event-store": "dev-master",
    "ramsey/uuid": "^3.8"
  },
  "require-dev": {
    "phpspec/prophecy": "^1.7",
    "phpunit/phpunit": "^7.5",
    "doctrine/instantiator": "^1.1",
    "sebastian/object-enumerator": "^3.0.3",
    "php-coveralls/php-coveralls": "^2.1",
    "php-http/guzzle6-adapter": "^2.0.1"
  },
  "autoload": {
    "psr-4": {
      "Prooph\\EventStoreHttpClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ProophTest\\EventStoreHttpClient\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "cs": "php-cs-fixer fix -v --diff --dry-run",
    "cs-fix": "php-cs-fixer fix -v --diff",
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true
  }
}
